@model TimeManagementLibary.Models.Module

@{
    if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @ViewData["ErrorMessage"]
        </div>
    }
}

<div class="container mt-5">

    <h1 class="text-center mb-4">Create Module</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ModuleCode" class="control-label">Module Code</label>
                    <input asp-for="ModuleCode" class="form-control" required />
                    <span asp-validation-for="ModuleCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ModuleName" class="control-label">Module Name</label>
                    <input asp-for="ModuleName" class="form-control" required />
                    <span asp-validation-for="ModuleName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NumberCredits" class="control-label">Number of Credits</label>
                    <input asp-for="NumberCredits" class="form-control" required />
                    <span asp-validation-for="NumberCredits" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ClassHoursPerWeek" class="control-label">Class Hours Per Week</label>
                    <input asp-for="ClassHoursPerWeek" class="form-control" required />
                    <span asp-validation-for="ClassHoursPerWeek" class="text-danger"></span>
                </div>
                

                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

</div>
