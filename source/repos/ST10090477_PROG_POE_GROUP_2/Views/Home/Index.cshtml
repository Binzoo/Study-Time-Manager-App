@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ST10090477_PROG_POE_GROUP_2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ST10090477_PROG_POE_GROUP_2.styles.css" asp-append-version="true" />
</head>
<body style="color:white; background-color: black;">

    <!-- Responsive navbar-->
    <header>
        <nav class="navbar navbar-expand-lg" style="color:white; background-color: black;">
            <div class="container">
                <a class="navbar-brand" style="color:white" href="/Home/Index"><img src="~/images/logo.png"  style="height:40px; width:auto;border-radius:34px"/> Study Time Manager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="btn btn-outline-success m-lg-1"> <a style="text-decoration:none" href="/Users/Login">Login in</a> </li>
                        <li class="btn btn-outline-primary m-lg-1"><a style="text-decoration:none" href="/Users/Create">Sign up</a> </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Header - set the background image for the header in the line below-->
    <header class="py-1 bg-image-full" style="background-color: black; color:white;" >
        <div class="text-center my-5">
            <img style="height:150px; width:150px" class="img-fluid rounded-circle mb-4" src="/images/logo.png" alt="..." />
            <h1 class="text-white fs-3 fw-bolder">Study Time Manager</h1>
            <p class="text-white-50 mb-0">Maximize Your Minutes, Master Your Studies</p>
        </div>
    </header>
    <!-- Content section-->
    <section class="container py-5" style="color:white;">
        <div class="my-5">
            <div class="row justify-content-center">
                <div  class="col-lg-6">
                    <h2 >About us</h2>
                    <p class="lead">"Welcome to Study Time Manager – Your Partner in Academic Success. Our journey began with a simple yet powerful vision: to empower students with effective time management tools tailored for their academic needs. As a team of educators, developers, and former students, we understand the challenges of balancing study schedules, assignments, and personal life. That's why we created Study Time Manager, an app designed to simplify and optimize your study routine. Our app combines cutting-edge technology with user-friendly design, enabling you to plan, track, and achieve your study goals with ease.</p>
                    
                </div>
            </div>
        </div>
    </section>
    
   
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Footer-->
<footer class="py-5" style="background-color: black; color:white;">
    <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Study Time Manager 2023</p></div>
</footer>

</body>
</html>