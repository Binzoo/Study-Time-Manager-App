<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ST10090477_PROG_POE_GROUP_2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ST10090477_PROG_POE_GROUP_2.styles.css" asp-append-version="true" />
</head>
<body style="color:white; background-color: black;">
    <header>
        <nav class="navbar navbar-expand-lg" style="color:white; background-color: black;">
            <div class="container">
                <a class="navbar-brand" style="color:white" href="/Home/Index"> <img src="~/images/logo.png" style="height:40px; width:auto;border-radius:34px;margin-right: 10px; " />Study Time Manager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="btn btn-outline-success m-lg-1"> <a style="text-decoration:none" href="/Users/Login">Log Out</a> </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main style="background-color: black;">
            @RenderBody()
        </main>
    </div>
    <!-- Footer-->
    <footer class="py-5" style="background-color: black; color:white;">
        <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Study Time Manager 2023</p></div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
